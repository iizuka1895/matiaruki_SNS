<% if post.favorited_by?(current_user) %>
  <%= button_to public_post_favorites_path(@post), method: :delete do %>
    <%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= button_to public_post_favorites_path(@post), method: :post do %>
    <%= post.favorites.count %> いいね
  <% end %>
<% end %>