
<div>
  <%= @post.post_name %>
  <%= image_tag @post.get_image %>
  <p>説明：<%= @post.sentence %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <%= render "favorites/btn", post: @post %>
  <% if @user != current_user %>
    <%= link_to "不適切な投稿として報告する" ,new_public_post_reports_path(@post) %>
  <% end %>
</div>
