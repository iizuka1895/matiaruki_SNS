<h1>Users#edit</h1>
<%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
  <div>
    <%= f.label :profile_image, "画像" %>
    <%= f.file_field :profile_image %>
  </div>
  <div>
    <%= f.label :名前 %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div>
    <%= f.label :自己紹介 %><br>
    <%= f.text_field :self_introduction, autofocus: true %>
  </div>
  <div>
    <%= f.submit "更新する" %>
  </div>
<% end %>