<%= @user.name %>さんの会員詳細
<%= form_with model: @user, url: admin_user_path, local: true do |f| %>
  <div>
    <%= f.label :"会員ID" %>
    <%= f.label :"#{@user.id}" %>
  </div>
  <div>
    <%= f.label :"ハンドルネーム" %>
    <%= f.text_field :name %>　
  </div>
  <div>
    <%= f.label :"会員ステータス" %>
    　<%= f.radio_button :is_active, true %>
    　<%= f.label :is_active, "有効"%>
    　<%= f.radio_button :is_active, false %>
    　<%= f.label :is_active, "退会" %>
  </div>
  <div>
    <%= f.submit '変更を保存する' %>
  </div>
<% end %>