<!DOCTYPE html>
<html>
  <head>
    <title>MatiarukiSns</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <% if admin_signed_in? %>
          <%= link_to "街歩きSNS", root_path %>
        <% else %>
           <%= link_to "街歩きSNS", root_path %>
        <% end %>
        <div>
          <ul>
            <% if user_signed_in? %>
              <li>
                <%= link_to "投稿", new_public_post_path %>
              </li>
              <li>
                <%= button_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
              <li>
                <%= link_to "投稿検索", public_posts_path %>
              </li>
              <li>
                <%= link_to "マイページ", public_user_path(current_user) %>
              </li>
              <li>
                <%= link_to "ホーム", public_users_path %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= button_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <li>
                <%= link_to "報告一覧", admin_reports_path %>
              </li>
              <li>
                <%= link_to "ユーザー一覧", admin_users_path %>
              </li>
            <% else %>
              <li>
                <%= link_to "About", about_path %>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
